<header class="page-header text-center">
  <h1>Welcome to Super Chat!</h1>
  <p>Logged in as <code>{{ currentUser.username }}</code></p>
</header>


<div id="chat">
  {{#each messages as |message| }}
    <p>
      <span class="message timestamp">{{ datetime message.createdAt }} -</span>
      <span class="message username">{{ message.username }} -</span>
      <span class="message body">{{ message.body }}</span>
    </p>
  {{/each }}
</div>


<form id="message-create">
  <div class="form-group">
    <input type="text" class="form-control" id="message" name="message" autofocus="true">
  </div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary">
  </div>
</form>









